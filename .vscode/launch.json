{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ytdlp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/server",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PYTHONPATH",
                    "value": "/home/src/c/rpi-yt-streamer/bin/_venv/lib/python3.13/site-packages:/home/src/c/rpi-yt-streamer/bin/yt-dlp"
                },
                {
                    "name": "PATH",
                    "value": "/home/src/c/rpi-yt-streamer/bin:${env:PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            //"miDebuggerArgs": "--eval-command=set debuginfod enabled on",
            //"symbolLoadInfo": {
            //    "loadAll": true,
            //    "exceptionList": ""
            //},
            //"coreDumpPath": "${workspaceFolder}/dump",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "build",
            //"postDebugTask": "kill server"
        }
    ]
}